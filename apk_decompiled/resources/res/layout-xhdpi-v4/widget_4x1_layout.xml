<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/background_4x1" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12.66dp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/widget2_stop_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/widget2_refresh" android:background="@drawable/btn_refresh_widget4x1" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginTop="3dp" android:layout_marginRight="2dp" android:layout_alignParentRight="true"/>
    <RelativeLayout android:id="@+id/widget_route_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/widget2_stop_name">
        <LinearLayout android:orientation="vertical" android:id="@+id/widget2_2nd_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp">
            <TextView android:textSize="12.66dp" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/widget_2nd_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:id="@+id/widget_2nd_route" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="23.33dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/icon_arrow_4x1"/>
            <TextView android:textSize="12.66dp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/widget2_RouteNo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:src="@drawable/icon_arrow_4x1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="50dp" android:layout_alignParentRight="true">
            <TextView android:textSize="12.66dp" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/widget_1st_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:id="@+id/widget_1st_route" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY"/>
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar android:id="@+id/widget2_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/widget_route_layout" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
</RelativeLayout>
